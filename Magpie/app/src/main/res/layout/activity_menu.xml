<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tech.itik.magpie.MenuActivity">

    <Button
        android:id="@+id/theme_button_2"
        android:layout_width="324dp"
        android:layout_height="51dp"
        android:text="Munich Tragedy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/theme_button_1"
        android:layout_width="324dp"
        android:layout_height="51dp"
        android:text="Supporters"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/theme_button_2" />

    <TextView
        android:id="@+id/pick_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick a Theme"
        app:layout_constraintBottom_toTopOf="@id/theme_button_1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/theme_button_3"
        android:layout_width="324dp"
        android:layout_height="51dp"
        android:text="Premiere League History"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/theme_button_2" />

</android.support.constraint.ConstraintLayout>
